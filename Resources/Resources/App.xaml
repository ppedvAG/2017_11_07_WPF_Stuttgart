<Application x:Class="Resources.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MyResources.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ResourcesFramework;component/SpecialColors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="teadfa" Color="AliceBlue" />
        </ResourceDictionary>

    </Application.Resources>
</Application>